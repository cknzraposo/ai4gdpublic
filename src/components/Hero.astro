---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section class="hero" class={`relative min-h-[calc(50vh-55px)] flex items-center justify-center ${className}`}> <!-- class={`relative min-h-[calc(50vh-48px)] flex items-center justify-center overflow-hidden mt-24 w-full bg-gradient-to-r from-emerald-400 via-sky-500 to-violet-500 ${className}`} -->
  <!-- Decorative circles -->
   <div class="floating-elements">
            <div class="floating-circle"></div>
            <div class="floating-circle"></div>
            <div class="floating-circle"></div>
        </div>
  <!-- div class="absolute w-[600px] h-[600px] rounded-full bg-white/10 blur-3xl -left-48 top-20"></div>
  <div class="absolute w-[400px] h-[400px] rounded-full bg-white/10 blur-3xl right-0 bottom-40"></div>
  <div class="absolute w-[300px] h-[300px] rounded-full bg-white/5 blur-2xl left-1/4 top-1/3"></div -->
  
  <div class="container mx-auto w-full px-6 py-20 relative z-30">
    <div class="max-w-[1200px] mx-auto">
      <div class="flex flex-col items-center text-center" class="hero-content">
        <h1>
          Building a better tomorrow with AI today
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-gray-700 mb-12 max-w-3xl leading-relaxed">
          We champion the use of artificial intelligence to solve real-world challenges improving lives, protecting the planet, and building a brighter future for everyone.
        </p>

        <div class="flex flex-col sm:flex-row gap-5">
          <a 
            href="/about" 
            class="px-8 py-3 text-lg font-medium rounded-full bg-white/20 hover:bg-white/30 text-gray-700 border border-gray-400 backdrop-blur-sm transition-all hover:scale-105"
          >
            Learn More
          </a>
          <a 
            href="/community" 
            class="px-8 py-3 text-lg font-medium rounded-full bg-blue-600 text-white hover:bg-blue-700 transition-all hover:scale-105"
          >
            Get Involved
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>

        .hero {
            min-height: 50vh;
            display: flex;
            align-items: center;
            position: relative;
            background: linear-gradient(135deg, #a7f3d0 0%, #7dd3fc 30%, #c4b5fd 60%, #f3e8ff 100%);
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 80%, rgba(167, 243, 208, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(125, 211, 252, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(196, 181, 253, 0.3) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            animation: floatUpDown 6s ease-in-out infinite;
            backdrop-filter: blur(10px);
        }

        .floating-circle:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-circle:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 60%;
            right: 15%;
            animation-delay: 2s;
        }

        .floating-circle:nth-child(3) {
            width: 60px;
            height: 60px;
            top: 80%;
            left: 70%;
            animation-delay: 4s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        @keyframes floatUpDown {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-30px); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 50px;

        }

        .hero h1 {
            font-size: clamp(3rem, 6vw, 5rem);
            font-weight: 900;
            margin-bottom: 1.5rem;
            margin-top:2.5rem;
            text-shadow: 0 4px 20px rgba(0,0,0,0.2);
            animation: slideUp 1s ease-out;
            line-height: 1.1;
            color: #1f2937;
        }

        .hero p {
            font-size: clamp(1.2rem, 3vw, 1.5rem);
            margin-bottom: 3rem;
            opacity: 0.9;
            animation: slideUp 1s ease-out 0.2s both;
            font-weight: 400;
            color: #374151;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

</style>