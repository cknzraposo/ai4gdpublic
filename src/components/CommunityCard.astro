---
import FeatureCard from './FeatureCard.astro';
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;

const features = [
  {
    title: "AI for Good Community",
    description: "Join a community of like-minded individuals who are passionate about using AI for social good. Share your projects, collaborate with others, and learn from experts in the field.",
    link: "https://aiforgood.itu.int/impact-initiative/",
    icon: "/icons/community.svg"
  },
  {
    title: "Events and Workshops",
    description: "Participate in events and workshops focused on AI for social impact via the New Zealand AI Forum. Gain hands-on experience, network with professionals, and enhance your skills.",
    link: "https://aiforum.org.nz/our-work/working-groups/",
    icon: "/icons/events.svg"
  },
  {
    title: "Resources and Support",
    description: "Access a wealth of resources, including tutorials, guides, and mentorship opportunities. Get the support you need to succeed in your AI for Good journey.",
    link: "hhttps://aiforum.org.nz/our-work/publications/",
    icon: "/icons/resources.svg"
  }
];

---
<section class={`py-24 ${className}`}>  
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
        DEMO SITE - Join the AI for Good Community
      </h2>
      <p class="text-lg md:text-xl text-gray-600">
        Be part of a global movement that harnesses the power of AI to create positive social impact. Whether you're a developer, researcher, or simply passionate about technology, there's a place for you in our community.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map(feature => (
        <FeatureCard 
          title={feature.title}
          description={feature.description}
          icon={feature.icon}
          link={feature.link}  /* clickable url will be undefined if not provided in the feature object */
        />
      ))}
    </div>
  </div>
</section>