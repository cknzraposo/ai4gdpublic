---
interface Props {
  title: string;
  description: string;
  icon: string;
  link?: string;  // Make link optional with '?'
}

const { title, description, icon, link } = Astro.props;
---

<div class="p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
  <div class="w-12 h-12 mb-4">
    <img src={icon} alt="" class="w-full h-full object-contain" />
  </div>
  {link ? (
    <a href={link} target="_blank" rel="noopener noreferrer" class="inline-block">
      <h3 class="text-xl font-bold mb-3 text-gray-900 hover:text-blue-600 transition-colors duration-200">
        {title}
      </h3>
    </a>
  ) : (
    <h3 class="text-xl font-bold mb-3 text-gray-900">
      {title}
    </h3>
  )}
  <p class="text-gray-600">
    {description}
  </p>
</div>
